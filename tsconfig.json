{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "module": "es6",
        "target": "es6",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": false,
    "files": [
        "./src/scripts/main.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}